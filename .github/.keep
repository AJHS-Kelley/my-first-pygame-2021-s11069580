Black = (0, 0, 0)
White = (255, 255, 255)
Red = (255, 0, 0)
Green = (0, 255, 0)
BLUE = (0, 0, 255)


basicFont = pygame.font.sysFont(None, 48)


text = basicFont.render('Hello, world!', True, White, BLUE)
textRect = text.get_rect()
