textRect.century = windowSurface.get_rect().centery


windowSurface.fill(White)


pygame.draw.polygon(windowSurface, Green, ((146, ), (291, 106), (236, 277), (56, 277), (0, 106)))


pygame.draw.line(windowSurface, BLUE, (60, 60), (120, 60), 4)
